{% set ts = extra_time.date.timestamp %}
<li>
    <div class="news-item-detail">										
        <a href="{{ path('show_extra_time', {'id': extratime.id}) }}" class="news-item-title">
            {% trans %}Extratime{% endtrans %} #{{ [index, ts|date('Y', 'Europe/Rome')]|join(' - ') }}
        </a>
        
        <p class="news-item-preview">
            {% if extra_time.is_holiday %}
                {% trans with {'%hours%' : extra_time.hours} %}Hours of holidays done in this day: %hours%'{% endtrans %}
            {% else %}    
                {% trans with {'%hours%' : extra_time.hours} %}Hours of extra work done in this day: %hours%'{% endtrans %}
            {% endif %}
        </p>
    </div>

    <div class="news-item-date">
        <span class="news-item-day">{{ ts|date('d') }}</span>
        <span class="news-item-month">{{ ts|date('A') }}</span>
        <span class="news-item-year">{{ ts|date('B - Y') }}</span>
    </div>
</li>